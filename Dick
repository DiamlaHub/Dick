-- PRIORITY PETS & VALUES
local PRIORITY = {
    ["Raccoon"]="ğŸ¦", ["Dragonfly"]="ğŸ‰", ["Mimic Octopus"]="ğŸ™", ["Red Fox"]="ğŸ¦Š",
